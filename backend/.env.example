# Backend Environment Variables Example  
# Copy this file to .env and update with your actual values

# MongoDB Connection (DO NOT COMMIT THIS TO GIT)
# Get this from MongoDB Atlas Dashboard
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=cv_builder_db

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# Application Settings
PORT=3001
NODE_ENV=development

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional for magic links)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@yourapp.com